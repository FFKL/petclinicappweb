<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.petclinic.petclinicapp.Client" table="Client">
        <meta attribute="class=description">
            This class contains the client detail.
        </meta>
        <id name="id" type="int" column="uid">
            <generator class="identity"/>
        </id>
        <property name="clientName" type="string" column="name"/>
        <many-to-one name="role" column="role_id" class="org.petclinic.models.Role" cascade="save-update"/>

        <set name="messages" table="messages" lazy="false" inverse="true" cascade="all" >
            <key column="client_id" not-null="true"/>
            <one-to-many class="org.petclinic.models.Message"/>
        </set>
    </class>
</hibernate-mapping>