<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>ClinicPet</display-name>


	<description>
        This is a simple web application with a source code organization
        based on the recommendations of the Applications Developer's Guide
    </description>

	<servlet>
        <servlet-name>ClinicServlet</servlet-name>
        <servlet-class>org.petclinic.servlets.ClinicServlet</servlet-class>
	</servlet>

    <servlet-mapping>
        <servlet-name>ClinicServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClinicViewServlet</servlet-name>
        <servlet-class>org.petclinic.servlets.ClinicViewServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClinicViewServlet</servlet-name>
        <url-pattern>/clinic/view</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AddClientServlet</servlet-name>
        <servlet-class>org.petclinic.servlets.AddClientServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AddClientServlet</servlet-name>
        <url-pattern>/clinic/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteClientServlet</servlet-name>
        <servlet-class>org.petclinic.servlets.DeleteClientServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteClientServlet</servlet-name>
        <url-pattern>/clinic/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditClientServlet</servlet-name>
        <servlet-class>org.petclinic.servlets.EditClientServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EditClientServlet</servlet-name>
        <url-pattern>/clinic/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchClientServlet</servlet-name>
        <servlet-class>org.petclinic.servlets.SearchClientServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SearchClientServlet</servlet-name>
        <url-pattern>/clinic/search</url-pattern>
    </servlet-mapping>
</web-app>